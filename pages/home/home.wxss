/**index.wxss**/

.home {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.home-background {
  display: inherit;
  height: 100%;
  width: 100%;
  z-index: -100;
  position:absolute;
}

.home-scroll {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  position:absolute;
}

.home-panel {
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
  position:relative;
  top: 160px;
}

 .home-user {
  display: inherit;
  width: 100%;
  flex-direction: column;
  background-color: red;
  height: 248rpx;
 }

.home-avatar {
  top: 20rpx;
  left: 50%;
  position:relative;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-left: -64rpx;
  border: 5rpx solid white;
}

.home-nickname {
  position:relative;
  top: 40rpx;
  height: 80rpx;
  color: #FFF;
  margin-bottom: 10rpx;
  font-size: 60rpx;
}

.home-sign {
  color: rgba(255, 255, 255, 0.5);
  font-size: 32rpx;
}

.home-separator {
    width: 50%;
    margin: 20rpx auto;
    border-top: 1rpx solid rgba(255, 255, 255, 0.4);
}

.home-motto {
  margin: 0 64rpx;
  display: inherit;
  line-height: 42rpx;
  font-size: 34rpx;
  color: rgba(255, 255, 255, 0.75);
  text-align: center;
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: 175;
}